{
  "compilerOptions": {
      //Project options
      "composite": true,
      "declaration": true,
      "declarationMap": false, //disable declarationMap while https://github.com/microsoft/TypeScript/issues/44335 is not solved
      "sourceMap": true,
      "target": "ES2022",
      "isolatedModules": false,
      //Module resolution
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true, //=> "allowSyntheticDefaultImports": true,
      //Checks
      "strict": true, //sets alwaysStrict, strictNullChecks, strictBindCallApply, strictFunctionTypes, strictPropertyInitialization, noImplicitAny, noImplicitThis
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noPropertyAccessFromIndexSignature": true,
      "noImplicitOverride": true,
      "useUnknownInCatchVariables": true,
      //Advanced
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
          "ES2022"
      ]
  }
}